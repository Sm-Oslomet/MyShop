@model Item


<div class="col"> <!-- represents a column in the grid for each item -->
            <div>
                <img src="@Model.ImageUrl" class="card-ing-top" alt="@Model.Name"> <!-- displays the item's image -->
                <div>
                    <div class="d-flex justify-content-between mt-2"> <!-- creates a felx container to align item anem and price -->
                        <h5 class="text-start"> <!-- displays the item's name, aaligned to the start (left) -->

                            <!-- <a generates a link that will navigate to specific action method within a controller-->
                            <a  asp-controller="Item"
                                asp-action="Details"
                                asp-route-id="@Model.ItemId">@Model.Name</a> <!-- item.name clickable text. asp controller specifies the name of the 
                                controller that the link should targed, this case item controller. asp action details specifies the name of the actiom method
                                within the specified controller that the link should taget, here it's details actio method
                                asp route id specifies a route parameter named id that should be passed to teh action method. value item.itemid is dynamically
                                inserted, meaning it will use the itemId property of the current item object in loop-->
                        </h5>
                        <h5 class="text-nowrap"> <!-- displays the item's price, foramtted as currency with NOK -->
                            @Model.Price.ToString("0.00 NOK")
                        </h5>
                    </div>
                </div>
            </div>
        </div>